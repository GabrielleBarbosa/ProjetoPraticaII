
@{
    ViewBag.title = "Relatorio";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Relatorio</title>
    <link rel=stylesheet href="~/html/css/estilo.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
</head>


<body>
    <h1 style="font-size:250%; font-family:Gabriola">Diagrama de Pareto </h1>
        <canvas id="graficoDePareto"></canvas>
    <script>
        var ctx = document.getElementById('graficoDePareto').getContext('2d');
        var chart = new Chart(ctx, {
            //o tipode chart que queremos criar
            type: 'bar',
            // as informações que queremos usar
            data: {
                labels: ['Erro de digitação de código', 'Outros', 'Falha de Localização', 'Erro de lógica', 'NullPointerException', 'Falha de Conexão', 'SqlException'],
                datasets: [{
                    label: 'Gráfico dos Erros',
                    backgroundColor: 'rgb(165,42,42)',
                    borderColor: 'rgb(255, 255, 0)',
                    data: [50, 32, 30, 15, 5, 3, 1]
                }]
            },

            // Configuration options go here
            options: {}
        });
    </script>
</body>
</html>
