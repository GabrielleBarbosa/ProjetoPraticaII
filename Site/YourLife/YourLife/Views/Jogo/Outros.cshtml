@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="~/Content/JS/Outros.js" type="text/javascript"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body style="font-family:'Calisto MT'">

    @{ 
        string disabledPorIdade="", disabledPorDinheiro="", disabledSuicidio="", disabledRel="", disabledEmprego="", disabledViajar="";
        if(ViewBag.Personagem.Idade < 15)
        {
            disabledPorIdade = "disabled";
        }
        else
        {
            if (((int)ViewBag.Personagem.PontosFelicidade) < 200)
            {
                disabledSuicidio = "disabled";
            }
            if (ViewBag.Personagem.Parceiro == 0)
            {
                disabledRel = "disabled";
            }
            if(ViewBag.Personagem.CodEmprego == 0)
            {
                disabledEmprego = "disabled";
            }
            if (ViewBag.Personagem.Dinheiro < 100)
            {
                disabledPorDinheiro = "disabled";
            }
            else if (ViewBag.Personagem.Dinheiro < 10000)
            {
                disabledViajar = "disabled";
            }
        }
    }
    <a href="/Jogo/Base" class="waves-effect waves-light btn" style="position:relative;left:0;top:0;">Voltar</a>

    <div class="container">
        <p style="font-size:4vh">Outras Opções</p>
        <hr style="height: 1px;" />

        <a class="btn white red-text z-depth-5 modal-trigger @disabledPorIdade @disabledSuicidio" id="s" href="#modalGeral" onclick="suicidio();"><i class="material-icons right">sentiment_very_dissatisfied</i>Suicídio @ViewBag.Personagem.PontosFelicidade</a><br /><br />
        <a class="btn white red-text z-depth-5 modal-trigger @disabledPorIdade  @disabledRel" href="#modalGeral" onclick="terminarRel();"><i class="material-icons right">favorite</i>Terminar Relacionamento</a><br /><br />
        <a class="btn white red-text z-depth-5 modal-trigger @disabledPorIdade @disabledPorDinheiro" href="#modalGeral" onclick="academia();"><i class="material-icons right">fitness_center</i>Academia</a><br /><br />
        <a class="btn white red-text z-depth-5 modal-trigger" href="#modalGeral" onclick="passear();">Passear</a><br /><br />
        <a class="btn white red-text z-depth-5 modal-trigger @disabledPorIdade @disabledEmprego" href="#modalGeral" onclick="demissao();"><i class="material-icons right">settings_power</i>Pedir demissão</a><br /><br />
        <a class="btn white red-text z-depth-5 modal-trigger" href="#modalGeral" onclick="visitarParentes();"><i class="material-icons right">home</i>Visitar Parentes</a><br /><br />
        <a class="btn white red-text z-depth-5 modal-trigger @disabledPorDinheiro" href="#modalGeral" onclick="cinema();"><i class="material-icons right">tv</i>Ir ao cinema</a><br /><br />
        <a class="btn white red-text z-depth-5 modal-trigger @disabledPorDinheiro @disabledViajar @disabledPorIdade" href="#modalGeral" onclick="viajar();"><i class="material-icons right" >flight</i>Viajar</a><br /><br />

        <!-- Modal Structure -->
        <div id="modalGeral" class="modal modal-fixed-footer">

            <div class="modal-content">
                <div class="modal-header">
                    <h4 style="font-family: 'Kodchasan', sans-serif;" class="blue-text text-darken-2" id="cabecalho">TITULO</h4>
                </div>
                <div class="modal-body">
                    <form action="" id="formModal">
                        <div class="row">
                            <div class="input-field col s12">
                                <label id="lbl1" class="lbl1"></label>
                                <input type="text" id="txt1" name="txt1" maxlength="300" />
                                <p id="paragrafo"></p>
                            </div>
                        </div>
                        <center>
                            <a class="waves-effect waves-light btn" id="resposta1" href="">Sim</a>
                            <button class="modal-close waves-effect waves-light btn" id="resposta2">Não</button>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


