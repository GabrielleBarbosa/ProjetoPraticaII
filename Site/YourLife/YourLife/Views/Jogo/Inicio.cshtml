@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<body  width="100%" height="100%">

    <script src="~/Content/JS/Inicio.js"></script>
    <form  action="/Jogo/AdicionaJogador" method="post" class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <label for="nome">Digite o seu nome:</label>
                <input type="text" value="" id="nome" name="nome" maxlength="15"/>
                @Html.ValidationMessage("jog.Nickname")
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="senha">Senha:</label>
                <input type="password" value="" id="senha" name="senha" />
                @Html.ValidationMessage("jog.Senha")
            </div>
        </div>
        <input type="submit" value="Cadastrar" />
    </form>

</body>