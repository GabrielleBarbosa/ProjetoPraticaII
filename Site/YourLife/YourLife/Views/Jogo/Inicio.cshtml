
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<head>
    <link rel=stylesheet href="~/Content/CSS/Inicio.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Kodchasan" rel="stylesheet">
</head>

<body>
    <center>
        <div class="caixa">
            <div class="container botoes">
                <center>
                    <a class="btn-large modal-trigger" href="#modal1">Jogar</a><br />
                    <a href="~/Jogo/Ranking" class="waves-effect waves-light btn-large">Ranking</a>
                </center>
            </div>
        </div>
    </center>

    <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
        <div class="modal-content">
            <div class="modal-header">
                <h4 style="font-family: 'Kodchasan', sans-serif;" class="blue-text text-darken-2">Escolha o nome de seu personagem</h4>
            </div>

            <div class="modal-body">
                <form action="/Jogo/SalvarNome">
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="p.Nome">Nome:</label>
                            <input type="text" id="p.Nome" name="p.Nome" maxlength="15" />
                        </div>
                    </div>
                    <center>
                        <button type="submit" class="waves-effect waves-light btn-flat">Prosseguir</button>
                    </center>
                </form>

            </div>
        </div>
        <div class="modal-footer">
            <a class="modal-close waves-effect waves-green btn-flat">Cancelar</a>
        </div>

    </div>
</body>

<script>
    $(document).ready(function () {
        $('.modal').modal();
    });
</script>