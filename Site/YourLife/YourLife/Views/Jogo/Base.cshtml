
@{
    ViewBag.Title = "Base";
    Layout = "~/Views/Shared/Layout.cshtml";
}


    <link rel="stylesheet" href="~/Content/CSS/Base.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <br />
    <div id="composicao">
        <center>
            @{
                <img src="@ViewBag.Imagem" id="personagem" height="500" width="350" /> <br />
            }
            <a class="waves-effect waves-light btn green darken-4 botoes" href="~/Jogo/Personagem">Personagem</a>
            <a class="waves-effect waves-light btn green darken-4 botoes" href="~/Jogo/Envelhecer">Envelhecer!<i class="material-icons">access_time</i></a>
        </center>
    </div>

    @{ 
        int pbSaude = ViewBag.Personagem.PontosSaude / 10;
        int pbInteligencia = ViewBag.Personagem.PontosInteligencia / 10;
        int pbRelacionamento = ViewBag.Personagem.PontosRelacionamento / 10;
        int pbFelicidade = ViewBag.Personagem.PontosFelicidade / 10;
    }
    <progress max="100" value='@pbSaude' id="pbSaude"></progress>
    <progress max="100" value='@pbInteligencia' id="pbInteligencia"></progress>
    <progress max="100" value='@pbRelacionamento' id="pbRelacionamento"></progress>
    <progress max="100" value='@pbFelicidade' id="pbFelicidade"></progress>


    <a class="waves-effect waves-light btn green darken-4 botoes" id="mercado" href="/MudarPagina/0/Mercado">Mercado</a>
    <a class="waves-effect waves-light btn green darken-4 botoes" id="empregos" href="/MudarPagina/0/Emprego">Empregos</a>
    <a class="waves-effect waves-light btn green darken-4 botoes" id="cursos" href="/MudarPagina/0/Curso">Cursos</a>
    <a class="waves-effect waves-light btn green darken-4 botoes" id="outros" href="~/Jogo/Outros">Outros</a>


