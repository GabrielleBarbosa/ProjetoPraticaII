
@{
    ViewBag.Title = "ConfiguracoesUsuario";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/CSS/Configuracoes.css" />
<link href="https://fonts.googleapis.com/css?family=Open+Sans|Sofia" rel="stylesheet">
<script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<center>
    <div class="container">
        <div class="caixa">
            <div class="container botoes">
                <center>
                    <p style="font-family: 'Sofia',cursive;font-size:6vh;" class="blue-text text-darken-2">Configurações do Usuário</p><br />
                    <a href="#modalAlterar" class="waves-effect waves-light btn modal-trigger">Alterar Senha</a><br />
                    <a href="#modalDeletar" class="modal-trigger waves-effect waves-light btn">Deletar Usuário</a>
                </center>
            </div>
        </div>
    </div>
</center>


<div class="modal modal-fixed-footer" id="modalAlterar">
    <div class="modal-content">
        <div class="modal-header">
            <p style="font-family: 'Sofia',cursive;font-size:6vh;" class="blue-text text-darken-2"><i>Alterar senha</i></p>
        </div>
        <div class="modal-body">
            <form id="form" action="/Usuario/Alterar">
                <div class="row">
                    <div class="input-field col s12">
                        <label for="usu.senha">Nova senha</label>
                        <input type="password" name="usu.senha" maxlength="15" required />
                    </div>
                </div>
                <button type="submit" class="waves-effect waves-light btn" style="font-family: 'Open Sans', sans-serif;">Confirmar</button>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <a class="modal-close waves-effect waves-green btn-flat">Cancelar</a>
    </div>
</div>

<div class="modal modal-fixed-footer" id="modalDeletar">
    <div class="modal-content">
        <div class="modal-header">
            <p style="font-family: 'Sofia',cursive;font-size:6vh;"><i>Deletar Usuário</i></p>
        </div>
        <div class="modal-body">
            <p style="font-family: 'Sofia',cursive;font-size:4vh;">Tem certeza de que deseja deletar seu usuário de nossos arquivos?</p>
        </div>
    </div>
    <div class="modal-footer">
        <a class="waves-effect waves-green btn-flat" href="/Usuario/DeletarUsuario">Deletar</a>
        <a class="modal-close waves-effect waves-green btn-flat">Cancelar</a>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.modal').modal();
    });
</script>
